<%= form_with model: @test, local: true do |form| %>
  <%= render 'shared/errors', resourse: @test %>

  <p>
    <%= form.label :title, 'Тест:' %><br>
    <%= form.text_field :title %>
  </p>

  <p>
    <%= form.label :level, 'Уровень:' %><br>
    <%= form.number_field :level %>
  </p>

  <p>
    <%= form.label :category_id, 'Категория' %><br>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>

  <p>
    <%= form.label :author_id, 'Автор' %><br>
    <%= form.collection_select :author_id, User.all, :id, :name, prompt: true %>
  </p>

  <p><%= form.submit %></p>
<% end %>
